<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Individual team</title>
  </head>
  <body>
    <h1><%= team.team_name %></h1>
    <h2>Players:</h2>
    <% players.forEach((player) => { %>
    <div class="player-card border rounded-lg p-4 shadow-md">
      <h3 class="text-xl font-bold mb-2">
        <%= player.first_name %> <%= player.last_name %>
      </h3>
      <div class="grid grid-cols-2 gap-2 text-sm">
        <p><span class="font-medium">Country:</span> <%= player.country %></p>
        <p>
          <span class="font-medium">Rank:</span> #<%= player.world_ranking %>
        </p>
        <p><span class="font-medium">Hand:</span> <%= player.playing_hand %></p>
        <p><span class="font-medium">Age:</span> <%= player.age %></p>
        <p>
          <span class="font-medium">Joined:</span> <%=
          player.join_date.toLocaleDateString() %>
        </p>
      </div>
    </div>
    <% }) %>
    <form action="/team/<%= team.id %>/delete" method="POST">
      <button type="submit" class="delete-btn">Delete Team</button>
    </form>
  </body>
</html>
